<div class="profile">
  <%= link_to edit_user_registration_path do %>
    <% if @user.image.present? %>
      <img src=<%= @user.image %> class="icon_image">
    <% else %>
      <img src="/assets/default.png" class="icon_image">
    <% end %>
    <div class="profile-contents">
      <h3><%= @user.username %></h3>
  <% end %>
      <p><span>自己紹介：</span><%= @user.introduction %></p>
    </div>
</div>

<% if @user.posts.any? %>
  <h3 class="text-center mt-3">投稿一覧 (<%= @user.posts.count %>)</h3>
  <ol>
    <%= render @posts %>
  </ol>
  <div class="text-center">
    <%= paginate @posts %>
  </div>
<% end %>