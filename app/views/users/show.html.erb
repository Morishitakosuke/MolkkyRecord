<div class="profile">
  <div class="status">
    <%= link_to edit_user_registration_path do %>
      <% if @user.image.present? %>
        <img src=<%= @user.image %> class="icon_image">
      <% else %>
        <img src="/assets/default.png" class="icon_image">
      <% end %>
    <% end %>
    <%= render "users/follow_form" %>
  </div>
  <div class="profile-contents">
    <%= link_to edit_user_registration_path do %>
      <h3 class="pt-5"><%= @user.username %></h3>
    <% end %>
    <div class="mb-1">
      <strong id="followings">
        <%= link_to "#{@user.followings.count}", following_user_path(@user), class: "text-dark" %>
      </strong>フォロー中
    </div>
    <div class="mb-1">
      <strong id="followers">
        <%= link_to "#{@user.followers.count}", followers_user_path(@user), class: "text-dark" %>
      </strong>フォロワー
    </div>
  </div>
  <% if @user.introduction.present? %>
    <div class="w-50 ml-5 my-auto mx-auto text-center">
      <p><span class="profile-color">自己紹介：</span><%= @user.introduction %></p>
    </div>
  <% end %>
</div>

<% if @user.posts.any? %>
  <h3 class="text-center mt-3">投稿一覧 (<%= @user.posts.count %>)</h3>
  <ol>
    <%= render @posts %>
  </ol>
  <div class="text-center">
    <%= paginate @posts %>
  </div>
<% end %>