<% @ranks.each.with_index(1) do |post, i| %>
  <div>
    <span class="ranking text-center mb-2"><i class="fas fa-crown"></i>第<%= i %>位</span>
    <div class="rank-box rounded-lg shadow-lg px-5 py-3">
      <%= link_to post do %>
        <div class="text-center mt-1">
          <% if post.image.present? %>
            <img src=<%= post.image %> class="show-image">
          <% else %>
            <img src="/assets/noimage.png" class="show-image">
          <% end %>
        </div>
        <div class="text-center mt-2">
          <p class="text-dark"><%= post.content.truncate(10) %></p>
        </div>
        <div class="text-center">
          <% if post.user.image.present? %>
            <img src=<%= post.user.image %> class="index_image">
          <% else %>
            <img src="/assets/default.png" class="index_image">
          <% end %>
          <div class="text-center ml-1 text-dark">
            <p><%= post.user.username %></p>
            <p><%= time_ago_in_words(post.created_at) %>前</p>
          </div>
        </div>
      <% end %>
    </div> 
  </div>
<% end %>
