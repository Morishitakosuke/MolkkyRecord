<div class="notification-view">
  <div class="notification-content">
    <div class="text-dark mt-3">
      <%= notification_form(notification) %>
    </div>

    <% if !@comment.nil? %>
    <div class="text-center mt-2">
      <%# コメントの内容（最大25文字） %>
      <div class="notification-comment ml-3 text-secondary"><%= @comment.content.truncate(25) %></div>
    <% end %>
      <div class="moderate-font text-right border-bottom">
        <%# 通知の作成時間 %>
        <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
      </div>
    </div>
  </div>
</div>
