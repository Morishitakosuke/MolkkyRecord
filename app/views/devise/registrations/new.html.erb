<%= form_with model: @user, url: user_registration_path, id: "new_user", class: "new_user", local: true do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group pt-5 mt-5">
    <%= f.label :username %><span class="form-list-info ml-2">（10文字以内）</span><br>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :email %><span class="form-list-info ml-2">（＠必須）</span><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :password %><span class="form-list-info ml-2">（6文字以上の半角英数字）</span><br>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="form-group mt-5 text-center">
    <%= f.submit t(".do_sign_up"), class: "btn p-2 pl-5 pr-5 text-white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
