<h2 class="mt-5 pt-5 text-center"><%= "#{@user.username} さんの編集ページ" %></h2>
<div class="text-center">
  <% if @user.image.present? %>
    <img src=<%= @user.avatar %> class="icon_image">
  <% else %>
    <img src="/assets/default.png" class="icon_image">
  <% end %>
</div>

<%= form_with model: @user, url: user_registration_path, method: :patch, class: 'registration-main', local: true do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group mt-5">
    <%= f.label :image %>
    <%= f.file_field :image, accept: "image/jpeg, image/png, image/jpg", autocomplete: "image", class: 'form-control border-0' %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", required: true, class: 'form-control' %>
  </div>
  
  <div class="form-group mt-5">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, autofocus: true, autocomplete: 'introduction', class: 'form-control' %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

    <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
  </div>

  <div class="form-group mt-5">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

    <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
  </div>

  <div class="form-group mt-5 text-center">
    <%= f.submit t('.update'), class: 'btn p-2 pl-5 pr-5 text-white' %>
  </div>
<% end %>

<h4 class="text-center border-top pt-3 mt-5">退会申請</h4>
<div class="form-group mt-5 text-center">
  <p><%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'btn p-2 pl-5 pr-5 text-white' %></p>
</div>
<%= link_to t('.back'), :back, class: 'text-center text-dark' %>
