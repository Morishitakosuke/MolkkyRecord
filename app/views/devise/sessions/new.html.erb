<%= form_with(model: @user,url: session_path(resource_name),local: true) do |f| %>  <div class="form-group">
  <div class="form-group pt-5 mt-5">
    <%= f.label :email %><span class="ml-2">（＠必須）</span><br>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group mt-5">
    <%= f.label :password %><span class="ml-2">（6文字以上の半角英数字）</span><br>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group mt-5 text-center">
    <%= f.submit  t('.do_sign_in'), class: 'btn  p-2 pl-5 pr-5 text-white' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
