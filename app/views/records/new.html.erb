<div class="container-fluid py-4 mw-md">
  <%= form_with(model: @record, local: true) do |f| %>
    <div class="form-group pt-5 mt-5">
      <h4>大会名</h4>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group mt-5">
      <h4>チーム名</h4>
      <%= f.text_field :teamname, class: "form-control" %>
    </div>
    <div class="form-group mt-5">
      <h4>名前</h4>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group mt-5">
      <h4>場所</h4>
      <%= f.text_field :place, class: "form-control" %>
    </div>
    <div class="form-group mt-5">
      <h4>スコア</h4>
      <%= f.text_field :score, class: "form-control" %>
    </div>
    <div class="form-group mt-5 text-center">
      <%= f.submit "投稿する", class: "btn p-2 pl-5 pr-5 text-white" %>
    </div>
    <%= link_to t("戻る"), :back, class: "text-center text-dark" %>
  <% end %>
</div>